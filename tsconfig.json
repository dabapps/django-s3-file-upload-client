{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "pretty": true,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      "es2017"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots" : [
      "./@types/",
      "./node_modules/@types/"
    ]
  },
  "include": [
    "./@types/",
    "./src/",
    "./examples/",
    "./tests/"
  ]
}
